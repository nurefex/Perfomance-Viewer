<UserControl x:Class="PrefomanceViewer.AllItems.GPU"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PrefomanceViewer.AllItems"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="80" IsHitTestVisible="False" Loaded="UserControl_Loaded" MinHeight="80" MinWidth="80" MaxWidth="80" MaxHeight="80">
    <Border BorderBrush="Gray" BorderThickness="2" Name="Border" IsHitTestVisible="False">
        <Grid IsHitTestVisible="False">
            <Label Content="GPU" VerticalAlignment="Top" HorizontalAlignment="Center" Name="NameP" IsHitTestVisible="False"/>
            <Label Content="100%" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="27" Name="Percent" IsHitTestVisible="False"/>
            <Label VerticalAlignment="Bottom" HorizontalAlignment="Right" Name="Temperature" Margin="0,0,0,-6"/>
        </Grid>
    </Border>
</UserControl>
